<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<conversionRule conversionWord="trace_id" converterClass="com.demo.framework.log.TraceIdConvert" />
	<!-- 控制台输出日志 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%trace_id] [%thread] %-5level %logger.%M[%file:%line]-%msg%n</pattern>
		</layout>
	</appender>
	
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		    <!-- rollover daily -->
			<FileNamePattern>/Users/welab/log/gateway/%d{yyyy-MM-dd,aux}/gateway_%d{yyyy-MM-dd_HH}_%i.log</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>360</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%trace_id] [%thread] %-5level %logger.%M[%file:%line] - %msg%n</Pattern>
		</layout>
	</appender>

	<appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>256</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="FILE"/>
    </appender>
	<logger name="com.demo">
		<level value="DEBUG" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="STDOUT" />
		
	</logger>
    <logger name="org.springframework">
		<level value="INFO" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.mybatis">
		<level value="DEBUG" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.apache.ibatis">
		<level value="DEBUG" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="com.alibaba">
		<level value="INFO" />
		<appender-ref ref="ASYNC" />
		<appender-ref ref="STDOUT" />
	</logger>
</configuration>